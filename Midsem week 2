#include <iostream>
#include <string>
using namespace std;

class Student {
    string id, name;
public:
    void setData(string i, string n) { id=i; name=n; }
    void display() { cout << id << " " << name << endl; }
};

void greet() { cout << "Attendance System\n"; }

int main() {
    Student s;
    s.setData("1", "John");
    s.display();
    greet();
    return 0;
}
